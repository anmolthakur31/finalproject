 <div class="login-container lightmode">
        
            <div class="login-box"> 
                <div class="login-body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {class: "form-group"}) do |f| %>

                    <div class="login-title"><strong >Log In</strong> </div>
            <br>
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                      <%= f.text_field :email, autofocus: true, class: "form-control",id: "email",placeholder: "Enter your email", required: true %>
                
                </div>
              </div>
            
  <br>
            
    
              <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                 
    <%= f.password_field :password, autocomplete: "off",class: "form-control", id: "password" , placeholder: "Enter your Password" %>
                  
                </div>
              </div>
            
<br>
                       
    <%= f.submit "Log in" ,id: "button", class: "btn btn-primary btn-lg btn-block login-button actions" %>
                          
                
                        <div class="col-md-12" style="text-align: center;">
                         <%= link_to "Forgot your password?", new_password_path(resource_name),class: "btn btn-link btn-block passbtn" %>
                           
                        </div>
            
                   <div class="col-md-12 col-sm-12 col-xs-12 nopadd">
        <a href="<%=user_facebook_omniauth_authorize_path%>" class="btn btn-block btn-social button-facebook btnbord">
            <span class="fa fa-facebook"></span> Sign Up with facebook
        </a>
        </div>
        <!-- <div class="col-md-6 col-sm-6 col-xs-12 nopadd">
   <a class="btn btn-block btn-social button-twitter btnbord" >
        <span class="fa fa-twitter"></span> Sign up
    </a>
    </div> -->
                 <div class="row">
                    <div class="login-subtitle col-md-12">

                        Don't have an account yet? <%=link_to "Create an account", new_registration_path(resource_name),class: " passbtn" %>
                    </div>
           
                </div>
              </div>
            </div>
            
        </div>
<% end %>
<%#= render "devise/shared/links" %>

<script>
   $(document).ready(function () {
$("#new_user").validate({
rules: {
"user[email]": {required: true, email: true},
"user[password]": {required: true, minlength: 6}
}    
});
});
  </script>

