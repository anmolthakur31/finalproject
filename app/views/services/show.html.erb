      <p id="cost" style="display: none;"><%=a.basic_cost %></p>
       </div>
       <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 m-t-30 text-center">
           <%if user_signed_in?%>
             <div class="animated zoomInUp"><%= link_to 'BOOK NOW', new_booking_path ,:class => "button-vehicle1  " %></div>
           <%end%>
             <div class="m-t-30 m-b-20 animated zoomInUp"><%= link_to 'CHECKOUT PRICE', new_booking_path ,:class => "button-vehicle1 " %></div>
