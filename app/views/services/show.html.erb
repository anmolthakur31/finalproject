<div class="clearfix "  >
       <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 " style="padding-top: 30px;" >
        <div class="available-color"><b><u>AVAILABLE SERVICES</u></b></div>
       	  <%Service.all.each do |service|%>
          <span><a href="<%=service_path(service)%>"><%=image_tag service.photo.url(:thumb) , :class =>"b-r-15" %></a></span>
				 <span><%= link_to service.name , service_path(service) , :class => "f-10 color-black active"%></span>
