
<%= form_for @service , :html => { :multipart => true } do |f| %>

  <div class="field">
    <%= f.label "Name" %><br>
    <%= f.text_field :name, required: :true , autofoucs: :true%>
  </div><br>
  <div class="field">
    <%= f.label "Description:" %><br>
    <%= f.text_area :description, required: :true %>
  </div><br>
  <div class="field">
    <%= f.file_field :photo %>
  </div><br>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>