<style type="text/css">
	.img-responsive{
		width: 100%;
		height: 100%;
	}
	.card .context {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    color: #fff;
    padding: 12px 16px;
    background-color: rgba(0, 0, 0, 0.5);
}

</style>
<div class="clearfix bg-service media-padding">

    <div class="col-md-12 col-xs-12 col-sm-12 col-lg-12 text-center color-orange">
        <h2 class=" m-t-50 m-b-50">OUR SERVICES</h2>
    </div>
  <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
   <% Service.all.each do |services|%>
    <div class="col-md-3 col-sm-6 col-lg-3 col-xs-12 parent-element">
       <div class="card card-deep-purple card-image bg-image ">
         <%= link_to (image_tag services.photo.url(:large), height: '100%', width: '100%'),service_path(services), class: "img-responsive"%>
          <div class="context color-orange h-100" >
          <span class="text-title text-center element f-20"><%= link_to services.name, service_path(services)%></span>
          </div>
       </div>
     </div>
   <%end%>
  </div>
</div>