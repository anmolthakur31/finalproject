<style type="text/css">
	.form-control{
  border: 1px solid black !important;
  border-radius: 6px !important;
    height: auto!important;
padding: 8px 12px !important;
}
.input-group {
    -webkit-box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.21)!important;
    -moz-box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.21)!important;
    box-shadow: 0px 2px 5px 0px rgba(0,0,0,0.21)!important;
}

</style>
<% modal ||= false %>
<% remote = modal ? true : false %>

				        <div class="panel-body" >
				<%= form_for(@brand, remote: remote, html: {role: :form, 'data-model' => 'brand', class: "form-horizontal"}) do |f| %>
					     <div class="form-group required">
					          <%= f.label "Name of Brand", class: "control-label col-md-5 col-xs-12 col-sm-5 requiredField text-center" ,:style => "margin-top: 2px;"%>
						           <div class="controls col-md-3 col-xs-12 col-sm-5 text-center "> 
						           <%= f.text_field :name, autofocus: true, required: :true,class: "input-md textinput textInput form-control",style: "margin-bottom: 10px"%>  
						           <%if @brand.errors[:name].present?%>
    							       Brand <%= @brand.errors[:name].first%> .
     								<%end %>
						           </div> 
					  </div>
					          <div class="form-group">
						              <div class="controls col-md-12 col-md-offset-3 text-center">
						                <%= f.submit 'Submit', class: "btn btn-primary btn btn-info" %>  
						              </div>
					          </div>    
				        </div>
		
		 
	 
<% end %>

<script type="text/javascript">
$(document).ready(function () {
$("#new_brand").validate({
rules: {
"brand[name]": {required: true}
}
});
});
</script>