<% modal ||= false %>
<% remote = modal ? true : false %>

				        <div class="panel-body" >
				<%= form_for(@brand, remote: remote, html: {role: :form, 'data-model' => 'brand', class: "form-horizontal"}) do |f| %>
					     <div class="form-group required">
					          <%= f.label "Name of Brand", class: "control-label col-md-5 requiredField"%>
						           <div class="controls col-md-3"> 
						           <%= f.text_field :name, autofocus: true, required: :true,class: "input-md textinput textInput form-control",style: "margin-bottom: 10px"%>   
						           </div> 
					  </div>
					          <div class="form-group">
						              <div class="controls col-md-4 col-md-offset-4 text-center">
						                <%= f.submit 'Submit', class: "btn btn-primary btn btn-info" %>  
						              </div>
					          </div>    
				        </div>
			      </div>
		 
	 
<% end %>

<script type="text/javascript">
$(document).ready(function () {
$("#new_brand").validate({
rules: {
"brand[name]": {required: true}
}
});
});
</script>