<% modal ||= false %>
<% remote = modal ? true : false %>
 <div class="panel-body" >
<%= form_for(@variant, remote: remote, html: {role: :form, 'data-model' => 'variant', class: "form-horizontal"}) do |f| %>

<div class="form-group required">
					          <%= f.label "Variant", class: "control-label col-md-5 col-xs-12 col-sm-5 text-center requiredField"%>
					            <div class="controls col-md-3 col-xs-12 col-sm-5 "> 
           <%= f.text_field :name, autofocus: true, required: :true,class: "input-md textinput textInput form-control",style: "margin-bottom: 10px"%>   
						           </div> 
					  </div>

  
      <div class="form-group">
						              <div class="controls col-md-12 col-md-offset-3 text-center">
						                <%= f.submit 'Submit', class: "btn btn-primary btn btn-info" %>  
						              </div>
					          </div>    
				        </div>
	
<% end %>
<script>
$(document).ready(function () {
$("#new_variant").validate({
rules: {
"variant[name]": {required: true}
}
});
});
</script>

					     
						         
						
					      
