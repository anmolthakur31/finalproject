
<h1 class="textcenter">Vehicle</h1>
	<div class="m-l-20">
		<h3>Brand : <%=@vehicle.brand.name%></h3>
		<h3>Model : <%=@vehicle.model.name%></h3>
		<h3>Variant: <%=@vehicle.variant.name%></h3>
		<h3>Services</h3>
		<%if @vehicle.services.select('services.*, vehicle_services.basic_cost').size == 0%>
			<p>No services available for this vehicle.</p>
		<%else%>
		 	<%i=1%>
		 	<table class="tablestyling">
			 	<tr class="tablestyling p-5">
				 	<td class="tablestyling p-5">S.No</td>
				 	<td class="tablestyling p-5">Service Name</td>
				 	<td class="tablestyling p-5">Service Cost</td>
			 	</tr>
			 	<% @vehicle.services.select('services.*, vehicle_services.basic_cost').each do |service| %>
			 	<tr class="tablestyling p-5">
				 	<td class="tablestyling p-5"><strong><%=i%></strong></td>
				 	<td class="tablestyling p-5"><%=service.name%></td><%i=i+1%>
				 	<td class="tablestyling p-5"><%=service.basic_cost%></td></tr>
		 		<%end%>
			</table>
		<%end%>
		<p>Please Visit Update option for choosing/modifying the vehicle's details, services and the cost of services. </p>
		<h5><%=link_to "Edit",edit_vehicle_path(@vehicle)%></h5>
	</div>


     <div class="row-fluid">
            <div class="span10 offset1">
                <div class="main-section main-primary">
                    <div class="main-heading">
                        <h1 class="main-title text-center">VEHICLE</h1>
                    </div>


                <div class="container">
                <div class="row">
                    <div class="main-body col-md-6 col-md-offset-3">
                        <div class="row-fluid">
                         
                            <div class="span6 text-center">
                               
                                <strong class="text-head"> VEHICLE ADDED</strong><br>

                                <table class="table table-condensed table-responsive table-user-information">
                                    <tbody>
                                    <tr>
                                        <td class="labels">Brand</td>
                                        <td class="tabledata"><%=@vehicle.brand.name%></td>
                                    </tr>
                                    <tr>
                                        <td class="labels">Model</td>
                                        <td class="tabledata" ><%=@vehicle.model.name%></td>
                                    </tr>
                                    <tr>
                                        <td class="labels">Variant</td>
                                        <td class="tabledata"><%=@vehicle.variant.name%>
                                      
                                        </td>
                                      
                                        
                                    </tr>
                                    <tr>
                                        <td class="labels"> Starting year</td>
                                        <td class="tabledata"><%=@vehicle.startyear%></td>
                                    </tr>
                                   
                                    </tbody>
                                </table>
                            </div>
                         
                        </div>
                    </div>
                </div>
                    <div class="main-footer text-center">
                       <p>Please Visit Update option for choosing/modifying the vehicle's services and the cost of service. 
                        <%=link_to "Edit",edit_vehicle_path(@vehicle), class: "btn btn-warning"%>
