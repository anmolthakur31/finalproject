<div class="row-fluid">
                    <div class="span10 offset1">
                            <div class="main-section main-primary">
                                    <div class="main-heading">
                                        <h3 class="main-title text-center">EDIT PROFILE</h3>
                                    </div>
                                        <%if user_signed_in? %>
                                      <%if current_user.userrole_id == 2%>
                                      <%@user.each do |users| %>
                <div class="container">
                <div class="row">
                    <div class="main-body col-md-12">
                        <div class="row-fluid">
                            
                            <div class="span6 text-center">
                               
                                 <div class="col-md-6 m-t-35">
                                <%= form_for(users, url: registration_path(users), html: { method: :put ,:id => "nopassword", class: "form-group form-horizontal w-100"}) do |f| %>
                                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">                         
                     <div class="form-group">
  <label class="col-md-3 control-label shift" >Name  <span  class="userfa"><i class="fa fa-user fa" aria-hidden="true"></i></span>
</label>  
  <div class="col-md-6">
                <div class="input-group w-100">
                 
                      <%= f.text_field :name, class: "form-control"%>
</div>
</div>
                
               
              </div>
            
  <br>
            <div class="form-group">
  <label class="col-md-3 control-label shift" >Email     <span  class="userfa"><i class="fa fa-envelope fa" aria-hidden="true"></i></span></label>

  <div class="col-md-6">

             
                <div class="input-group w-100">
                

                   <%= f.email_field :email,class: "form-control"  %>
</div>
</div>
                
              </div>
            
<br>
          
        <div class="form-group">
  <label class="col-md-3 control-label shift" for="Phone number ">Phone number            <span class="userfa"><i class="fa fa-phone fa" aria-hidden="true"></i></span></label>  
  <div class="col-md-6">
             
                <div class="input-group w-100">
        

                     <%= f.text_field :phone,class: "form-control"    %>

               </div>
               </div>   
                
              </div>
              <div class="field ">
                                             <div class="fileinput fileinput-new" data-provides="fileinput">
                                                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 250px; height: 200px; border: 1px solid #e3e3e3;">
                                                   <%if users.image.exists?%>
                                                  <%= image_tag users.image.url(:medium) %>
                                                   <%end%>
                                               </div>
                 
                                                <div>
                                                 <span class="btn btn-default btn-file">
                                                  <span class="fileinput-new">Select image</span>
                                                   <span class="fileinput-exists">Change</span>
                                                    <%if users.image.exists?%>
                                                         <%= f.file_field :image %>
                                              
                                                      <%else%>
                                                        <%= f.file_field :image %>
                                                      <%end%>
                                                       </span>
                                                <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                             </div>
                                             </div>
                                            
                                          </div>
              <div class="cols-sm-10 col-sm-offset-3 cols-md-10 col-md-offset-3 col-xs-12 col-xs-offset-3 btnwidth">
   <%= f.submit "Update", id: "button", class: "btn btn-primary btn-lg btn-block login-button actions m-b-40"  %>
  </div>
                                               
                                            <% end %>
                                     </div> 
                                     </div>
                                      <div class="col-md-6 m-t-35">
                                         <%= form_for(users, url: registration_path(users), html: { method: :put  ,:id => "passwordonly" ,:class => "text-center form-group w-90"}) do |f| %>
   <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class= "fa fa-unlock-alt" aria-hidden="true"></i></span>
                    
    <%= f.password_field :password, autocomplete: "off",class: "form-control", id: "password" , placeholder: "Enter your new Password" %>
                  
                </div>
              </div>
              <br>
  <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                    <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control", id: "confirm" , placeholder: "Confirm your new Password" %>
              
                </div>
              </div>
<br>
  <div class="cols-sm-10">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                     <%= f.password_field :current_password, autocomplete: "off",class: "form-control", id: "confirm" , placeholder: "Your current Password" %>
              
                </div>
              </div>
              <br>
        <div class="cols-sm-10 col-sm-offset-3 cols-md-10 col-md-offset-3 col-xs-12 col-xs-offset-3 btnwidth1">
   <%= f.submit "Update", id: "button", class: "btn btn-primary btn-lg btn-block login-button actions m-b-10"  %>
  </div>
<% end %>
    </div>                                    </div>
                                     </div>
                                </div>
                            </div>
                        </div>
                    <%end%>
                <%end%>
            <%end%>
         </div>
    </div>     
</div>


